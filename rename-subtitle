#!/bin/bash

# make an array with files, srt and smi 
sub=("$(ls | egrep '\.srt$|\.smi$')")

index=0
for FILE in *.mkv
do
    echo "${FILE}"
    echo "${sub[$index]}"
    echo
    ((index++))
    #FILE=${FILE%.mkv}
done

echo "--------------------------------------------------"
read -n1 -p "Are files matched? (y or n) "; echo; echo
case $REPLY in
    [yY]) true
        ;;
    *) exit
        ;;
esac

index=0
for FILE in *.mkv
do
    extension="${sub[$index]##*.}"
    mv "${sub[$index]}" "${FILE%.mkv}.${extension}"
    ((index++))
done

